<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Products</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <table class="table">
            <thead class="table">
              <th>ID</th>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Imagen</th>
            </thead>
            <tbody>
              {{#each productos}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.nombre}}</td>
                  <td>{{this.precio}}</td>
                  <td><img src="{{this.thumbnail}}" height="30px" /></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>