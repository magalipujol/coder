{{#if productos.length}}
  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table" id="products-table">
          <thead>
            <tr>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Imagen</th>
            </tr>
          </thead>
          <tbody id="productos">
            {{#each productos}}
              <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.precio}}</td>
                <td><img src="{{this.thumbnail}}" height="30px" /></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{{/if}}